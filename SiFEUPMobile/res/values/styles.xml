<resources>
    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="@style/Theme.Sherlock.Light" />
    <!-- Start with the Holographic Light theme -->
    <style name="Theme.IOSched" parent="@style/Theme.Sherlock.Light">
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <!-- custom attributes -->
        <item name="textHeaderMaxLines">@integer/text_header_max_lines</item>
        <item name="trackAbstractMaxLines">@integer/track_abstract_max_lines</item>
    </style>

    <style name="Theme.IOSched.Home" parent="style/Theme.IOSched">
        <item name="android:windowBackground">@drawable/window_background_home</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
    </style>

    <style name="ActionBarText" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingTop">11dip</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:paddingLeft">12dip</item>
    </style>
    
       <style name="GrayTitle">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/body_text_grey</item>
    </style>
    

    <style name="ListItemContainerBase">
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>

    <!-- a simple list item is one whose container and content are the same view -->
    <style name="SimpleListItem" parent="style/ListItemContainerBase">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- used for more complex list items, e.g. those with stars aligned to the top-right -->

    <style name="ListItemContainer" parent="style/ListItemContainerBase" />

    <style name="ListItemContent">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

   

    <!-- body content -->

    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:maxLines">?attr/textHeaderMaxLines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextHeader2">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextHeader3">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="PushButton">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@drawable/btn</item>
    </style>
    
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingLeft">@dimen/body_padding_medium</item>
    </style>

    <style name="NormalFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingLeft">@dimen/body_padding_medium</item>
    </style>
</resources>
